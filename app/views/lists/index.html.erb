<div class="container d-flex justify-content-center pb-3">
  <div class="row col-10 col-lg-9 col-xl-10 col-xxl-10">
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="mw-40 text-center d-flex flex-column align-items-center">
          <div class="card-img shadow-sm bg-dark m-3 d-flex align-items-center justify-content-center">
            <% if list.photo.attached? %>
              <%= cl_image_tag list.photo.key, width: 100, height: 100, crop: :fill, class: "rounded-circle" %>
            <% else %>
              <p class="fs-1 pt-3">üçø</p>
            <% end %>
          </div>
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </div>
    <%= link_to 'Add list', new_list_path %>
  </div>
</div>
