<%= @list.name %>
<% @list.bookmarks.each do |bookmark| %>
  <li><%= bookmark.movie.title %> -
    <%= link_to '❌', bookmark_path(bookmark), class: 'link', data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </li>
<% end %>
